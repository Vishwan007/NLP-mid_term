from bs4 import BeautifulSoup
import re
# Sample noisy HTML text
text = """
<html>
 <head><title>Sample Page</title></head>
 <body>
 <h1>Welcome to My Website</h1>
 <p>This is a <b>sample paragraph</b> with <a href="#">a link</a> inside it.</p>
 <p>Here is another paragraph with <i>italic text</i> and <u>underlined text</u>.</p>
 <div>
 <h2>Section Title</h2>
 <p>Some content inside a div. <span style="color:red;">Red text here!</span></p>
 </div>
 <footer>
 <p>Contact: info@example.com</p>
 </footer>
 </body>
</html>
"""
# 1. Remove HTML tags
soup = BeautifulSoup(text, "html.parser")
clean_text = soup.get_text()
# 2. Remove special characters (keep letters, numbers, and spaces)
clean_text = re.sub(r'[^A-Za-z0-9\s]', '', clean_text)
# 3. Remove extra spaces and newlines
clean_text = re.sub(r'\s+', ' ', clean_text).strip()
print(clean_text) 
